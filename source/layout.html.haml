<!doctype html>
%html
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge;chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %title
      Blog Title#{' - ' + current_article.title unless current_article.nil?}
    = feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed"
    = stylesheet_link_tag "all"
    = javascript_include_tag "all"
  %body
    %header
      = partial "shared/_nav"
    %main
      .row
        .parallax-container.dimmed
          .parallax
            %img{src: "images/par.jpg"}
      .row
        .section
        = partial "shared/profile"
      .brand-blue-container
        .row
          .section
          =partial "shared/article_boxes"
    = partial "shared/_footer"
