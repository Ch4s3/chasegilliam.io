<!doctype html>
%html
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge;chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %title
      ChaseGilliam.io#{' - ' + current_article.title unless current_article.nil?}
    = feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed"
    = stylesheet_link_tag "all"
    = javascript_include_tag "all"
  %body
    .img-container
      = partial "shared/_nav"
    .row
      .col.s4.offset-s4
        %img.avatar{ alt:"chase avatar", src: "/images/profile.jpg" }
    .row.articles
      .input-field.col.s6.offset-s3
        %input#search.awesomplete{ placeholder: "Search for Articles of Tags", type: "text", "data-list" => "#{tags_and_titles}" }
          %label{ for: "search" } Search
      .col.s10.offset-s1.col.l8.offset-l2
        = yield
